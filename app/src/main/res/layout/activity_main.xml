<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <include
        android:id="@+id/common_layout"
        layout="@layout/common_layout"
    />

    <ImageButton
        android:id="@+id/return_icon"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/common_layout"
        android:layout_marginStart="@dimen/main_activity_all_view_margin"
        android:layout_marginBottom="@dimen/main_activity_all_view_margin"
        app:srcCompat="@drawable/ic_return"/>

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/recyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_activity_all_view_margin"
        android:layout_marginBottom="@dimen/main_activity_all_view_margin"
        android:text="@string/chose_city_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerView_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/main_activity_all_view_margin"
        android:layout_marginTop="@dimen/main_activity_all_view_margin"
        android:layout_marginEnd="@dimen/main_activity_all_view_margin"
        android:layout_marginBottom="@dimen/main_activity_all_view_margin" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recycle_view_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="地區"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycle_view_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:text="溫度 (℃)"
        app:layout_constraintStart_toEndOf="@+id/recycle_view_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycle_view_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="天氣狀況"
        app:layout_constraintStart_toEndOf="@+id/recycle_view_item1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycle_view_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="舒適度"
        app:layout_constraintStart_toEndOf="@+id/recycle_view_item2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycle_view_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="降雨機率 (%)"
        app:layout_constraintStart_toEndOf="@+id/recycle_view_item3"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_weather_forecast_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerView_height"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/main_activity_all_view_margin"
        android:layout_marginTop="@dimen/main_activity_all_view_margin"
        android:layout_marginEnd="@dimen/main_activity_all_view_margin"
        android:layout_marginBottom="@dimen/main_activity_all_view_margin" />

</android.support.constraint.ConstraintLayout>